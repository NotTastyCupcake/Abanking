@model Work.Models.MainPersonModel

@{
    ViewData["Title"] = "Добавить сотрудника";
}

<h1>Добавление сотрудника</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-sm-3"></label>
                <input asp-for="FirstName"/>
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-sm-3"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="col-sm-3"></label>
                <input asp-for="Age" />
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="col-sm-3"></label>
                <input asp-for="Gender" />
                <span asp-validation-for="Gender"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartment" class="col-sm-3"></label>
                <select asp-for="IdDepartment" asp-items="ViewBag.IdDepartment"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdLanguage" class="col-sm-3"></label>
                <select asp-for="IdLanguage" asp-items="ViewBag.IdLanguage"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
                <a asp-action="Index">Назад к списку</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
