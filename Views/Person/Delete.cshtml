        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language.NameLanguage)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPerson" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться в список</a>
