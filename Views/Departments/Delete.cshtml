@model Work.Models.Department

@{
    ViewData["Title"] = "Удалить отдел";
}

<h1>Удалить отдел</h1>

<h3>Вы действительно хотите удалить отдел? Весь приписанныей к нему персонал будет удален из списка.</h3>
<div>
    <h4>Отдел</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameDepart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDepartment" />
